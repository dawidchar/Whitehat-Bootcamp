<a href="/" class="position-relative" style="top:1rem; left:1rem;">
    <h5 class="font-weight-medium text-dark d-inline">←Back</h5>
</a>
<h1 class="text-center">{{rst.name}}</h1>
<div class="mx-auto d-flex justify-content-around" style="width: 28rem;">
    <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#addmenumodal">
        Add Menu 🥘
    </button>
    <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#editmodal">
        Edit ✏
    </button>
    <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#deletemodal">
        Delete ❌
    </button>
</div>
{{> rstdelete}}
{{> rstedit}}
{{> rstaddmenu}}
{{> menudelete}}
{{> menuedit}}
{{> menuadditems}}
{{> itemedit}}

<section class="mx-auto text-center mt-5">
    <div class="row justify-content-around">
        {{#each menus}}
        <div class="card border-secondary my-3 mx-5 shadow entCard" style="width: 26rem;">
            <h4 class="card-header">{{this.title}}</h4>
            <div class="mx-auto d-flex justify-content-around my-2" style="width: 100%;">
                <a class="btn-sm" style="cursor:pointer" data-toggle="modal" data-target="#menuadditems"
                    data-id="{{this.id}}" data-title="{{this.title}}">
                    Add Items 🥗
                </a>
                <a class="btn-sm" style="cursor:pointer" data-toggle="modal" data-target="#menuedit"
                    data-id="{{this.id}}" data-title="{{this.title}}">
                    Edit ✏
                </a>
                <a class="btn-sm" style="cursor:pointer" data-toggle="modal" data-target="#deletemenu"
                    data-id="{{this.id}}" data-title="{{this.title}}">
                    Delete ❌
                </a>
            </div>
            <div class="card-body text-dark mx-auto" style="width: 80%;">
                {{#each items}}
                <div class="row align-items-center justify-content-between; ">
                    <a style="padding-top: 1px; width:80%; cursor:pointer" data-toggle="modal"
                        data-target="#itemedit" data-id="{{this.id}}" data-name="{{this.name}}"
                        data-price="{{this.price}}" data-menuid="{{this.menuId}}">
                        <h6 class="text-left m-0">{{this.name}}</h6>
                    </a>
                    <p class="ml-auto m-0" style="width: 20%;">{{currency this.price}}</p>
                </div>
                <hr class="" />
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>
</section>


<script>
    Handlebars.registerPartial('rstdelete');
    Handlebars.registerPartial('rstedit');
    Handlebars.registerPartial('rstaddmenu');
    Handlebars.registerPartial('menudelete');
    Handlebars.registerPartial('menuedit');
    Handlebars.registerPartial('menuadditems');
    Handlebars.registerPartial('itemedit');
    
</script>