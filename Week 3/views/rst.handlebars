<a href="/" class="position-relative" style="top:1rem; left:1rem;">
    <h5 class="font-weight-medium text-dark">←Back</h5>
</a>
<h1 class="text-center">{{rst.name}}</h1>
<section class="mx-auto text-center mt-5">
    <div class="row justify-content-around">
        {{#each menus}}
        <div class="card border-secondary my-3 mx-5 shadow entCard" style="width: 26rem;">
            <h4 class="card-header">{{this.title}}</h4>
            <div class="card-body text-dark mx-auto" style="width: 80%;">
                {{#each items}}
                <div class="row align-items-center justify-content-between ">
                    <h6 class="text-left m-0" style="padding-top: 1px; width:80%;">{{this.name}}</h6>
                    <p class="ml-auto m-0" style="width: 20%;">£ {{this.price}}</p>
                </div>
                <hr class="" />
                {{/each}}
            </div>
        </div>
        {{/each}}
    </div>
</section>