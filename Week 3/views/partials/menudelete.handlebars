<div class="modal fade" id="deletemenu" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deletemenutitle">Are you sure you want to delete{{this.title}}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
        <button id="deletemenuconfirm" type="button" class="btn btn-danger">Yes</button>
      </div>
    </div>
  </div>
</div>


<script>
    $('#deletemenu').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget)
        var menuid =  button.data('id')
        var menuname =  button.data('title')  
        var modal = $(this)
        modal.find('#deletemenutitle').html(`Are you sure you want to delete ${menuname}`)
        modal.find('#deletemenuconfirm').click(function (){
          location.href=`/rst/{{rst.id}}/menu/${menuid}/delete`;
        })
        modal.find('#rst-image').val(menuname)
    })
</script>